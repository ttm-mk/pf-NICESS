<div class="bg-primary">
  <div class="container">

    <!--ログインしてない場合-->
    <% if !user_signed_in? %>

      <div class="row">
        <div class="col-12 pt-4">
          <h1 class="text-center">NICESSとは</h1>
        </div>
      </div>

      <div class="row">
        <div class="col-6 offset-3 rounded text-center bg-white my-3">
          匿名で創作活動をしたい人を応援するSNSサイトです。<br>
          ＥＣサイトを複合することで、<br>
          創作活動をする人たちをつなぎ、支援します。<br>
          <br>
          創作活動や交流を楽しみましょう！
        </div>
        <div class="col-3"></div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="text-center">画像</div>
        </div>
      </div>

      <div class="row">
        <div class="col-12 text-center">
          <div class="h2">まずはゲストログインをして<br>試してみてください！</div>
          <div>
            <%= link_to "こちら", user_guest_sign_in_path, method: :post, class: 'h5 text-light' %>
            からどうぞ！
          </div>
          <div>
            NICESSの詳しい内容は
            <%= link_to "ABOUT", about_path, class: 'h5 text-light' %>
            をご覧ください。
          </div>
          <div>
            新規登録は
            <%= link_to "こちら", new_user_registration_path, class: 'h5 text-light' %>
            から
          </div>
          <div>
            ログインは
            <%= link_to "こちら", new_user_session_path, class: 'h5 text-light' %>
            から
          </div>
        </div>
      </div>

    <!--ログインしている場合-->
    <% else %>
      <div class="row">

        <div class="col-7 my-3">
          <div class="my-2">

            <!--タブ-->
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item bg-white">
                <a class="nav-link active" id="post-tab" data-toggle="tab" href="#post" role="tab" aria-selected="true">投稿</a>
              </li>
              <li class="nav-item bg-white">
                <a class="nav-link" id="image-tab" data-toggle="tab" href="#image" role="tab" aria-selected="false">画廊</a>
              </li>
              <li class="nav-item bg-white">
                <a class="nav-link" id="favorite-tab" data-toggle="tab" href="#favorite" role="tab" aria-selected="false">いいね</a>
              </li>
              <li class="nav-item bg-white">
                <a class="nav-link" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-selected="false">ユーザー</a>
              </li>
            </ul>

            <!--タブ内容-->
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="post" role="tabpanel" aria-labelledby="post-tab">
                <%= render 'public/posts/index' %>
              </div>
              <div class="tab-pane fade" id="image" role="tabpanel" aria-labelledby="image-tab">
                画像あり投稿一覧表示
              </div>
              <div class="tab-pane fade" id="favorite" role="tabpanel" aria-labelledby="favorite-tab">
                いいね投稿一覧表示
              </div>
              <div class="tab-pane fade" id="user" role="tabpanel" aria-labelledby="user-tab">
                フォローしているユーザー一覧表示
              </div>
            </div>

          </div>
        </div>

        <div class="col-4 offset-1">
          <!--投稿スペース-->
          <div class="mt-3 mb-5">
            <%= form_with model: @post, url:posts_path, method: :post do |f| %>
              <div><%= f.text_area :text, size: "50" %></div>
              <div class="mx-5"><%= f.submit '投稿する', class: 'btn btn-light' %></div>
            <% end %>
          </div>

          <!--ショップスペース-->
          <!--< % if shop_id_present? %>-->
            <div class="bg-white m-3 h-25">
              <div>ここにショップ情報おく</div>
            </div>
          <!--< % end %>-->

          <!--画廊スペース-->
          <div class="bg-white m-3">
            <div>ここに画廊</div>
          </div>

        </div>

      </div>

    <% end %>

  </div>
</div>
