<div class="container">
  <div class="row">

    <!--サイドバー-->
    <div class="col-2">
      <%= render 'public/shops/sidebar', shop: @shop %>
    </div>

    <div class="col-10">

      <div class="form-group mt-4">
        <div class="row">
          <div class="col-12 col-lg-8">
            <div class="card mx-auto" style="width: 25rem; height: 25rem;">
              <div class="card-body bg-white">
                gazou
              </div>
            </div>
          </div>

          <% if @shop.user_id == current_user.id %>
            <div class="col-12 col-lg-4">
              <div class="m-4">
                <%= link_to "編集する", edit_user_shop_item_path(@item), class: 'btn btn-success px-5' %>
              </div>
              <div class="m-4">
                <%= link_to "削除する", edit_user_shop_item_path(@item), method: :delete, class: 'btn btn-danger px-5', data: {confirm: "本当に削除しますか？"} %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <%= form_with model: @cart_item, url: cart_item_path(current_user), method: :post do |f| %>
        <div class="form-group pt-3">
          <div class="row">
            <div class="col-12 col-lg-11 offset-lg-1 pl-5">
              <h3><%= @item.name %></h3>
              <div class="pl-4">
                <%= @item.introduction %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-12 col-lg-3">
              <%= @item.price %>円(税込)
            </div>
            <div class="col-12 col-lg-9">
              <%= f.select :amount, *[1..5] %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <div class="row">
            <div class="col-12 mx-auto">
              <div class="">
                <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
              </div>
              <div class="pt-3">
                <%= link_to "TOPに戻る", user_shop_path(@user) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>