<div class="container">
  <div class="row">

    <% if current_user.shop.present? %>
      <!--サイドバー-->
      <div class="col-2">
        <%= render 'public/shops/sidebar', shop: @shop %>
      </div>

      <!--注文履歴一覧-->
      <div class="col-10">
        <% @user_orders.each do |user_order| %>
          <div class="card">
            <div class="card-header">
              <%= user_order.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M') %>　注文履歴
            </div>

            <div class="card-body">

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    ショップ名：<%= user_order.order.shop.name %>
                  </div>
                </div>
              </div>

              <% user_order.order.items.each do |item| %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-12 col-lg-3">
                      <%= item.name %>
                    </div>
                    <div class="col-12 col-lg-4">
                      <%= item.price %>円 × <%#= item.order.order_detail.amount %>点
                    </div>
                    <div class="col-12 col-lg-5">
                       小計：<%#= item.order_detail.price * item.order_detail.amount %>
                    </div>
                  </div>
                </div>
              <% end %>

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    <div class="">送料：<%= @postage %></div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    <div class=""><%= user_order.order.status_i18n %></div>
                  </div>
                </div>
              </div>

              <div class="form-group text-right">
                <hr>
                  <div class="row">
                    <div class="col-9">
                       <h5><strong>請求金額</strong></h5>
                    </div>
                    <div class="col-3">
                      <div class="pr-5">小計＋送料円</div>
                    </div>
                  </div>
                <hr>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    <% else %>
    <% end %>

  </div>
</div>