<div class="container">
  <div class="row">

    <% if current_user.shop.present? %>
      <!--サイドバー-->
      <div class="col-2">
        <%= render 'public/shops/sidebar', shop: @shop %>
      </div>

      <!--注文履歴一覧-->
      <div class="col-10">
        <% @orders.each do |order| %>
          <div class="card mx-3 my-4">
            <div class="card-header">
              <%= order.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M') %>　注文履歴
            </div>

            <div class="card-body">

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    ショップ名：<%= order.shop.name %>
                  </div>
                </div>
              </div>

              <% order.order_details.each do |order_detail| %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-12 col-lg-3">
                      <%= order_detail.item.name %>
                    </div>
                    <div class="col-12 col-lg-4 pl-4">
                      <%= order_detail.order_price %>円 × <%= order_detail.amount %>点
                    </div>
                    <div class="col-12 col-lg-5">
                       小計：<%= order_detail.order_price * order_detail.amount %>円
                    </div>
                  </div>
                </div>
              <% end %>

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    <div class="">送料：<%= @postage %></div>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-12">
                    <div class=""><%= order.status_i18n %></div>
                  </div>
                </div>
              </div>

              <div class="form-group text-right">
                <hr>
                  <div class="row pr-5">
                    <div class="col-12 col-lg-9">
                       <h5><strong>請求金額</strong></h5>
                    </div>
                    <div class="col-12 col-lg-3">
                      <div><%= order.total_payment %>円</div>
                    </div>
                  </div>
                <hr>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    <% else %>
    <% end %>

  </div>
</div>