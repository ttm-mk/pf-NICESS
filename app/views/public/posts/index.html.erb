<div class="container">
  <div class="row my-4">
    <div class="col-12 col-lg-8 order-1 order-lg-0">

      <!--ユーザーの投稿一覧-->
      <h4>
        <i class="fas fa-scroll"></i>
        <%= @user.name %>の投稿一覧
        <i class="fas fa-scroll"></i>
      </h4>

      <% @user.posts.each do |post| %>
        <div class="form-group">
          <div class="card">
            
            <div class="card-body bg-white">
              <div>
                <%= simple_format(post.text) %>
                <%= link_to user_post_path(post.user_id, post) do %>
                  <div class="btn btn-primary">
                    <i class="fas fa-angle-double-right"></i>詳細
                  </div>
                <% end %>
              </div>
            </div>
            
          </div>
        </div>
      <% end %>

    </div>


    <!--右側-->
    <div class="col-12 col-lg-4 mb-5 mb-lg-0 order-0 order-lg-1">
      
      <%= render "public/users/user_sidebar", user: @user, shop: @shop %>
      <!--プロフィール-->
      <div class="card">
        <div class="card-body">
          
          <div class="row">
            <div class="col-4">
              <%= image_tag @user.get_user_icon(100,100) %>
            </div>
            <div class="col-8 d-flex justify-content-center align-items-center">
              <%= @user.name %>
            </div>
          </div>
          
          <% if @user.profile.present? %>
            <div class="mt-3">
              <%= simple_format(@user.profile) %>
            </div>
          <% end %>
          
        </div>
      </div>

      <!--ショップ-->
      <div class="mt-3">
        <% if @user.shop.present? %>
        <div class="h5 text-center py-3">
          <i class="fas fa-shopping-cart"></i>
          <%= link_to "ショップ", user_shop_path(@user.name_id) %>
          <i class="fas fa-shopping-cart"></i>
        </div>

          <% if @user.shop.items.present? %>
            <!-- Slider main container -->
            <div class="swiper">

              <!-- Additional required wrapper -->
              <div class="swiper-wrapper">

                <!-- Slides -->
                <% @user.shop.items.each do |item| %>
                  <div class="swiper-slide">

                    <div class="card mx-4">
                      <%= image_tag item.item_image %>

                      <div class="card-body">
                        <div class="card-title">
                          <%= item.name %>
                        </div>

                        <div class="card-text">
                          <div class="pt-3">
                            <%= item.introduction %>
                          </div>
                          <div class="pt-3">
                            <div class="pt-2">
                              <%= item.price %>円(税込)
                            </div>
                          </div>
                          <div>
                            <%= link_to "詳細", user_shop_item_path(item.shop.id, item), class: 'btn btn-primary mt-3 form-control' %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                <% end %>
              </div>

            <!-- If we need navigation buttons -->
              <div class="swiper-button-prev fa-fw fa-2x">
                <i class="fas fa-arrow-circle-left"></i>
              </div>
              <div class="swiper-button-next fa-fw fa-2x">
                <i class="fas fa-arrow-circle-right"></i>
              </div>
            </div>
          <% else %>
            <div class="h5 text-center p-5">
              商品なし
            </div>
          <% end %>

        <% else %>
          <div class="h5 text-center p-5">
            ショップなし
          </div>
        <% end %>
      </div>

      <!--画像投稿-->
      <div class="mt-3">
        <div class="h5 text-center py-3">
          <i class="fas fa-images"></i>
          画像投稿一覧
          <i class="fas fa-images"></i>
        </div>

        <!-- Slider main container -->
        <div class="swiper">

          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">

            <!-- Slides -->
            <% @user.posts.each do |post| %>
            
              <% if post.image.present? %>
                <div class="swiper-slide">

                  <div class="card mx-4">
                    <%= image_tag post.image %>

                    <div class="card-body">
                      <div class="pt-3">
                        <%= link_to "詳細", user_post_path(post.user.name_id, post.id), class: 'btn btn-primary btn-block mt-3' %>
                      </div>
                    </div>
                    
                  </div>
                  
                </div>
              <% end %>
              
            <% end %>
          </div>

        <!-- If we need navigation buttons -->
          <div class="swiper-button-prev fa-fw fa-2x">
            <i class="fas fa-arrow-circle-left"></i>
          </div>
          <div class="swiper-button-next fa-fw fa-2x">
            <i class="fas fa-arrow-circle-right"></i>
          </div>
        </div>
      </div>

    </div>
    
  </div>
</div>


