<div class="container">
  <h2>Show</h2>
  <%= simple_format(@post.text) %>
  <hr>
  <% @post.comments.reverse.each do |comment| %>
    <div>
      <%= comment.user.name %>
      <%= simple_format(comment.text) %>
      <%= link_to user_post_comment_path(params[:user_id], params[:id], comment), method: :delete, data: {confirm: '削除しますか？'} do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  <% end %>
  <hr>
  <%= form_with model: @comment, url: user_post_comments_path(params[:user_id], @post) do |f| %>
    <div class="form-group">
      <%= f.text_area :text, rows: 5, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <% end %>
</div>