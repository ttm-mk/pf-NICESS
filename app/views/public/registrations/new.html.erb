<div class="container">

  <div class="row">
    <div class="col-12 text-center">
      <h2 class="p-4">新規ユーザー登録</h2>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <div class="card mb-5">
        <div class="card-body p-5">
          <%= form_with model: @user, url:user_registration_path, method: :post do |f| %>
            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  ユーザー名
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.text_field :name, autofocus: true, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  ユーザーID
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.text_field :name_id, autofocus: true, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  メールアドレス
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.text_field :email, autofocus: true, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  パスワード
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  パスワード(確認)
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row mt-5">
                <div class="col-12 text-center">
                  <%= f.submit "新規登録", class: 'btn btn-lg btn-primary btn-block' %>
                </div>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


