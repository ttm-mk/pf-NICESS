<div class="container">

  <div class="row">
    <div class="col-12">
      <h3 class="p-4 text-center">
        <strong>ログイン</strong>
      </h3>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <div class="card mb-5">
        <div class="card-body p-5">
          <%= form_with model: @user, url:user_session_path, method: :post do |f| %>
            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  <div class="h5">ユーザーID</div>
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.text_field :name_id, autofocus: true, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-12 col-lg-4">
                  <div class="h5">パスワード</div>
                </div>
                <div class="col-12 col-lg-8">
                  <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="row py-5">
              <div class="col-12 text-center">
                <%= f.submit "ログイン", class: 'btn btn-lg btn-block btn-success' %>
              </div>
              <div class="col-3"></div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
