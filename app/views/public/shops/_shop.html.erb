<div class="container">
  <div class="row">
    <div class="col-12">
      <% if @shops.present? %>

        <% @shops.each do |shop| %>
          <div class="card bg-white">
            <div class="card-body">
              <div class="form-group">
                <%= link_to user_path(shop.user.name_id) do %>
                  <%= image_tag shop.user.get_user_icon(100,100) %>
                <% end %>
                <%= shop.user.name %>
              </div>
              <div class="form-group">
                <%= shop.user.profile %>
              </div>
              <div class="form-group">
                <%= link_to "ショップへいく", user_shop_path(shop.user.name_id), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>

      <% else %>
        <div class="my-5 text-center">
          ショップはありません
        </div>

      <% end %>

    </div>
  </div>
</div>