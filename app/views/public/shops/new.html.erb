<div class="container">
  <div class="row mt-5">
    <div class="col-12 mx-auto">
      
      <div class="card">
        <!--ヘッダー-->
        <div class="card-header h4">
          ショップ新規登録
        </div>
        <!--ボディ-->
        <div class="card-body">
          <%= form_with model: @shop, url:user_shop_path(params[:user_id]), method: :post do |f| %>
            <div class="form-group">
              <div class="row">
                <div class="col-12 col-md-4">
                  ショップ名
                </div>
                <div class="col-12 col-md-8">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <div class="row">
                <div class="col-12 col-md-4">
                  ショップ説明
                </div>
                <div class="col-12 col-md-8">
                  <%= f.text_area :introduction, rows: 5, class: 'form-control' %>
                </div>
              </div>
            </div>
            
            <!--フッター-->
            <div class="form-group">
              <div class="row">
                <div class="col-12">
                  <%= f.submit "ショップを新規作成", class: 'btn btn-primary px-3' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
</div>