<div class="container">
  <div class="row">
    <div class="card m-5 mx-auto" style="width: 35rem;">
      <div class="card-header">
        マイ情報
      </div>
      <div class="card-body">

        <div class="form-group">
          <div class="row">
            <div class="col-12 pb-3">
              <%= image_tag user.get_user_icon(100,100) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-4 pb-3">
              なまえ
            </div>
            <div class="col-8 pb-3">
              <%= user.name %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-4 pb-3">
              ユーザーid
            </div>
            <div class="col-8 pb-3">
              <%= user.name_id %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-4 pb-3">
              プロフィール
            </div>
            <div class="col-8 pb-3">
              <%= simple_format(user.profile) %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-4 pb-3">
              メールアドレス
            </div>
            <div class="col-8 pb-3">
              <%= user.email %>
            </div>
          </div>
        </div>
      </div>
      <% if user.id == current_user.id %>
      <div class="card-footer">
        <div class="py-2">
          <%= link_to "編集する", edit_user_path(user.name_id), class: 'btn btn-success' %>
          <%= link_to "ショップをつくる", user_shop_new_path(user), class: 'btn btn-primary ml-4' %>
        </div>
        <div class="py-2">
          <%= link_to "退会する", user_confirm_path(current_user), class: 'btn btn-danger' %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>