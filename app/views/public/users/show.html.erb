<div class="container">
  <div class="row">
    
    <div class="col-7">
      <!--投稿スペース-->
      <div class="mt-4 mb-5">
        <%= form_with model: @post, url:posts_path, method: :post do |f| %>
          <div><%= f.text_area :text, size: "50", class: 'form-control' %></div>
          <div class="mr-5 my-2"><%= f.submit '投稿する', class: 'btn btn-light' %></div>
        <% end %>
      </div>
      
      
      <!--タブ-->
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item bg-white">
          <a class="nav-link active" id="post-tab" data-toggle="tab" href="#post" role="tab" aria-selected="true">
            投稿
          </a>
        </li>
        <!--<li class="nav-item bg-white">-->
        <!--  <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-selected="false">-->
        <!--    プロフィール-->
        <!--  </a>-->
        <!--</li>-->
        <% if @user == current_user %>
          <li class="nav-item bg-white">
            <a class="nav-link" id="mypage-tab" data-toggle="tab" href="#mypage" role="tab" aria-selected="false">
              マイページ
            </a>
          </li>
        <% end %>
      </ul>
  
      <!--タブ内容-->
      <div class="tab-content" id="myTabContent">
        <!--post-->
        <div class="tab-pane fade show active" id="post" role="tabpanel" aria-labelledby="post-tab">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
        <!--profile-->
        <!--<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">-->
